{% extends 'base.html.twig' %}

{% block page %}{{title}}{% endblock %}
{% block title %}{{title}}{% endblock %}

{% block body %}
<h2>Messages</h2>
<p>{{ thisPage }} page.</p>
<table>
<tr>
    <th>Id</th>
    <th>Content</th>
    <th>Name</th>
    <th>posted</th>
</tr>
{% for item in data %}
<tr>
    <td>{{ item.id }}</td>
    <td>{{ item.content }}</td>
    <td>{{ item.person }}</td>
    <td>{{ item.posted.format('Y-m-d') }}</td>
</tr>
{% endfor %}
</table>

{% include '/message/pagenav.html.twig' with [thisPage, maxPages] %}

{% endblock %}